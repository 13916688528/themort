<VirtualHost *:80>
	ServerAdmin webmaster@localhost
	ErrorLog ${APACHE_LOG_DIR}/error.log
	LogLevel warn
	CustomLog ${APACHE_LOG_DIR}/access.log combined
	DocumentRoot /opt/mortgagecomparison/website/angularjs/app
	<Directory /opt/mortgagecomparison/website/angularjs/app>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>
	WSGIScriptAlias /rest /opt/mortgagecomparison/website/django/mortgagecomparison/wsgi-scripts/wsgi.py
</VirtualHost>



